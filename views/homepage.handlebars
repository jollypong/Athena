  <h1>GAGGLE - Where Discussions Happen!</h1>
</header>
<main>

  <div class="gallery">
    <aside>
      <h2>Enter Discussion-Rooms</h2>
    </aside>
    {{#each galleries as |gallery|}}
    {{> gallery-details}}
    {{/each}}
    <div class='chart'>
      <div>
        <canvas id="myChart"></canvas>
      </div>
      <div class='add-dish-container'>
        <h2>
          ADD TOPICS!
        </h2>
        <form class='new-topic-form'>
          <label for='dish_name'>
            Topic Name:
          </label>
          <br />
          <textarea id='dish_name' name='dish_name' rows='2' cols='30'>
        {{dish_name2}}
      </textarea>
          <button type='submit' value='Submit'>
            Submit
          </button>
        </form>
      </div>
    </div>
  </div>

  <script>
    const labels = [
      'TOPIC -1',
      'TOPIC -2',
      'TOPIC -3',
      'TOPIC -4',
      'TOPIC -5',
      'TOPIC -6',
    ];

    const data = {
      labels: labels,
      datasets: [{
        label: 'My First dataset',
        backgroundColor: [
          'rgba(255, 99, 132)',
          'rgba(255, 159, 64)',
          'rgba(255, 205, 86)',
          'rgba(75, 192, 192)',
          'rgba(54, 162, 235)',
          'rgba(153, 102, 255)',
          'rgba(201, 203, 207)'
        ],
        borderColor: 'rgb(255, 99, 132)',
        data: [0, 10, 5, 2, 20, 30, 45],
      }]
    };
    const config = {
      type: 'bar',
      data: data,
      options: {
