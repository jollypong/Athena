<div class="chat1" id="conversation-section">
  <section id="conversation-box">

    <div id="chatBox">

      <div id="gaggle">

        <div id="gaggleInfo" class="column">
          <h2>{{conversationTitle}}</h2>
          <button id="load-chat-button">Load Chat</button>

        </div>

      </div>

      <div id="message-container" class="card-content">

        <div id="messages">
          {{#each messages as |message|}}
          <div class='dish userChatContent thought'>
            <p>
              {{message.body}}
            </p>
            <div id="usernamestamp"><sub>username{{userId}}</sub></div>
          </div>

          {{/each}}
        </div>

        <div id='conversation-id' data="{{conversationId}}" class="form-container">

          <form id="chatInputContainer" class="">

            <input id="chatInput" type=text placeholder="Message!" />
            <button id="chatBtn" class="">
              SEND
              <i id="sendButton" class="fas fa-paper-plane"></i>
            </button>
          </form>
        </div>

      </div>
    </div>
</div>

<div id="message-container" class="card-content">

  <div id="messages">
    {{logger messages}}
    {{#each messages as |message|}}
    <div class="userChatContent">
      <p id="userNameStamp">{{message.username}}:</p>
      <p>{{message.body}}</p>
    </div>
    {{/each}}
  </div>

  <div id="conversation-id" data="{{conversationId}}" class="form-container">

    <form id="chatInputContainer" class="">

      <input id="chatInput" type="text" placeholder="Message!" />
      <button id="chatBtn" class="">
        SEND
        <i id="sendButton" class="fas fa-paper-plane"></i>
      </button>
    </form>
  </div>

</div>
</div>
</section>
</div>
<script src='/js/conversation.js'></script>